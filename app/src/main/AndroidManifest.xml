<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hub.yasiga.popularmoviesapp1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hub.yasiga.popularmoviesapp1.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hub.yasiga.popularmoviesapp1.MovieDetails"
            android:label="Movie Details"
            android:parentActivityName="hub.yasiga.popularmoviesapp1.MainActivity">


        </activity>

        <activity
            android:name="hub.yasiga.popularmoviesapp1.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="hub.yasiga.popularmoviesapp1.MainActivity"/>


    </application>

</manifest>
